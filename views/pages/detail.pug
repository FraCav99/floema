extends ../template.pug

block variables
  - var template = 'detail'

block content
  .detail
    .detail__wrapper
      figure.detail__media
        img.detail__media__image(alt=document.data.product.alt, src=document.data.product.url)

      .detail__information
        p.detail__information__collection=document.data.collection.data.title[0].text

        h1.detail__information__title=document.data.title

        .detail__information__content
          .detail__information__highlights
            each highlight in document.data.highlights
              p.detail__information__highlight
                svg.detail__information__highlight__icon
                  use(xlink:href=`sprite-${highlight.highlights_icon.toLowerCase()}`)

                span.detail__information__highlight__text=highlight.highlights_text


          .detail__information__list
            each item in document.data.informations
              p.detail__information__item
                strong.detail__information__item__title=item.informations_label
                span.detail__information__item__description=item.informations_description

          a.detail__information__link(href=document.data.link_url.url, target="_blank")=document.data.link_text
